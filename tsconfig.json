{
  "compilerOptions": {
    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "target": "ES2015",

    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "~/*": ["./imports/ui/*"],
      "meteor/*": [
        "node_modules/@types/meteor/*",
        ".meteor/local/types/packages.d.ts"
      ]
    },
    "lib": ["ES2020", "ESNext", "DOM.Iterable", "DOM"]
  },
  "include": ["./imports"]
}
